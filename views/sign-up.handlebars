<form class="form-signin container form-padding card-style">
    <h1 class="h3 mb-3 font-weight-bold text-muted text-center">Create an Account</h1>

    {{!-- First name user input --}}
    <label for="inputEmail" class="sr-only">First Name</label>
    <input type="text" id="inputFirstName" class="form-control my-1" placeholder="First Name" required autofocus/>
    
    {{!-- Last name user input --}}
    <label for="inputEmail" class="sr-only">Last Name</label>
    <input type="text" id="inputLastName" class="form-control my-1" placeholder="Last Name" required autofocus/>
    
    {{!-- Email user input --}}
    <label for="inputEmail" class="sr-only">Email Address</label>
    <input type="email" id="inputEmail" class="form-control my-1" placeholder="Email Address" required autofocus/>

    {{!-- Password user input --}}
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" id="inputPassword" class="form-control my-1" placeholder="Password" required/>
    
    {{!-- Social media user input --}}
    <label for="inputSocialMedia" class="sr-only">Password</label>
    <input type="text" id="inputSocialMedia" class="form-control my-1" placeholder="Social Media" required/>

    <button class="btn btn-lg btn-warning btn-block text-light" type="submit">
        Create Account
    </button>
    
    <p class="mt-5 mb-3 text-muted text-center">&copy; POD8 2021</p>
</form>